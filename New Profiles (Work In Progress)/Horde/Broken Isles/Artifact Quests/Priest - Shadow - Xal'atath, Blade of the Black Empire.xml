	</InitOrder>
END INITORDER COMMENT -->

	<QuestOrder>
		<!-- Check function status -->
			<Code File="RunCode" Type="Definition" >
				<![CDATA[
					bool? profileFunctionsEnabled => (bool?)AppDomain.CurrentDomain.GetData("QuestingProfiles_FunctionsEnabled");
				]]>
			</Code>
			<If Condition="profileFunctionsEnabled == null || profileFunctionsEnabled == false" >
				<Code File="RunCode">
					<![CDATA[ Bots.Professionbuddy.PBLog.Log(Colors.MediumPurple, "[Profile Message!]: ", Colors.Yellow, "Please stand by as the functions are being activated!"); ]]>
				</Code>
				<Code File="LoadProfile" ProfileName="..\..\..\Functions\Activate Functions.xml" />
			</If>
		<!-- END Check function status -->

		<If Condition="Me.IsAlliance" >
			<Code File="LoadProfile" ProfileName="..\..\..\1-110 Autoloader.xml" />
		</If>
		<!-- RunCode Methods -->
			<Code File="RunCode">
			<![CDATA[
				Bots.Professionbuddy.PBLog.Log(System.Windows.Media.Colors.MediumPurple, "> [Profile Initialization Status] ", System.Windows.Media.Colors.CornflowerBlue, "\n     Auto-Looting	:: Enabled\n     Looting	:: Enabled\n     Game Addons	:: Disabled");
				Lua.DoString("SetCVar('AutoLootDefault', 1);");
				Lua.DoString("SetCVar('autoDismountFlying', 1);");
				CharacterSettings.Instance.LootMobs = true;
				CharacterSettings.Instance.Save();
				Lua.DoString("for i=1,GetNumAddOns() do local relo=false if IsAddOnLoaded(i) then relo=true DisableAddOn(i) end if relo then relo=nil ReloadUI() end end");
				await Coroutine.Sleep(1500);
				Logging.Write(System.Windows.Media.Colors.MediumPurple, "> [Ready to bot!]");
			]]>
			</Code>
			<Code File="RunCode" Type="Definition">
				<![CDATA[
						bool DoQuest(params uint[] questIds)
						{
							foreach (var questId in questIds)
							{
								if (HasQuest(questId) && !IsQuestCompleted(questId)) return true;
							}
							return false;
						}
						bool NeedsQuest(params uint[] questIds)
						{
							foreach (var questId in questIds)
							{
								if (!HasQuest(questId) && !IsQuestCompleted(questId)) return true;
							}
							return false;
						}
						bool NeedsBreadcrumbQuest(params uint[] questIds)
						{
							foreach (var questId in questIds)
							{
								if (IsQuestCompleted(questId)) return false;
							}
							return true;
						}
						bool QuestDone(params uint[] questIds)
						{
							foreach (var questId in questIds)
							{
								if (HasQuest(questId) && IsQuestCompleted(questId)) return true;
							}
							return false;
						}
						bool QuestFlaggedCompleted(params uint[] questIds)
						{
							foreach (var questId in questIds)
							{
								return Lua.GetReturnVal<bool>($"return IsQuestFlaggedCompleted({questId});", 0);
							}
							return false;
						}
						async Task SkipCutscene(int preWait = 3000, int postWait = 3000)
						{
					// Add detection of cutscene here.
							await Coroutine.Sleep(preWait);
					// Test and improve the working method.
							Lua.DoString("MovieFrame:StopMovie(); CinematicFrame_CancelCinematic(); StopCinematic();");
							await Coroutine.Sleep(postWait);
						}
					]]>
			</Code>
		<!-- END RunCode Methods -->

		<!-- Get Continuation Quest -->
			<If Condition="IsQuestCompleted(40938) &amp;&amp; NeedsQuest(41625) &amp;&amp; NeedsQuest(43935, 44407)" > <!-- Using The Light and the Void (40938) to determine if we've already got the first artifact.  -->
				<Code File="InteractWith" MobId="110564" WaitTime="1250" X="1333.91" Y="1335.634" Z="177.1372" />
				<Code File="Misc\RunLua" WaitTime="1500" Lua="if GossipTitleButton2:IsVisible() then GossipTitleButton2:Click() else GossipTitleButton1:Click() end" />
				<Code File="Misc\RunLua" WaitTime="2000" Lua="QuestFrameAcceptButton:Click();" />
				<Code File="Misc\RunLua" WaitTime="1500" Lua="if QuestChoiceFrameOption2.OptionButton:IsVisible() then QuestChoiceFrameOption2.OptionButton:Click() else QuestChoiceFrameOption1.OptionButton:Click() end" />
				<!-- If this isn't our last artifact, then there will be a second dialog box here.  This code is uncommented out to ignore it since this should typically be our last artifact 
					<Code File="Misc\RunLua" WaitTime="1500" Lua="StaticPopup1Button1:Click();" /> -->
				<Code File="Misc\RunLua" WaitTime="1000" Lua="StaticPopup1Button2:Click();" /> <!-- Decline changing specs -->
			</If>
		<!-- END Get Continuation Quest -->

		<!-- Second+Third Artifact -->
			<If Condition="QuestDone(43935, 44407)" >
				<Code File="InteractWith" MobId="110564" WaitTime="1250" X="1333.91" Y="1335.634" Z="177.1372" />
				<Code File="Misc\RunLua" WaitTime="1500" Lua="if GossipTitleButton3:IsVisible() then GossipTitleButton3:Click() else GossipTitleButton2:Click() end" />
				<Code File="Misc\RunLua" Lua="QuestFrameCompleteQuestButton:Click();" />
			</If>
		<!-- END Second+Third Artifact -->
		
		<!-- Story: Artifact Weapon - Xal'atath, Blade of the Black Empire -->
			<!--START1: Need to detect if this is the player's first artifact quest since the NPC is in a different location. -->
			<PickUp QuestName="Blade in Twilight" QuestId="40710" GiverName="Alonsus Faol" GiverId="101314" X="2602.816" Y="-534.5225" Z="89.00004" />
			<!-- :END1 -->
			<While Condition="DoQuest(40710)" >
				<!-- Leave class hall and go to Tirisfal, not needed if this is our first artifact. -->
				<If Condition="Bots.DungeonBuddy.Helpers.ScenarioInfo.Current.CurrentStageNumber == 0 &amp;&amp; !HasItem(128827)" >
					<MoveTo Nav="Fly" X="2069.151" Y="2434.454" Z="126.8198" />
				</If>

				<If Condition="!IsObjectiveComplete(2, 40710)" >
					<If Condition="Bots.DungeonBuddy.Helpers.ScenarioInfo.Current.CurrentStageNumber == 1" >
						<Code File="InteractWith" MobId="247335" X="2169.021" Y="2405.116" Z="120.6115" TerminateWhen="IsScenarioCriteriaComplete(3)" />
						<Code File="InteractWith" MobId="247334" X="2166.851" Y="2437.328" Z="121.1552" TerminateWhen="IsScenarioCriteriaComplete(2)" />
						<Code File="InteractWith" MobId="247332" X="2101.889" Y="2424.72" Z="119.5176" TerminateWhen="IsScenarioCriteriaComplete(1)" />
					</If>

					<If Condition="Bots.DungeonBuddy.Helpers.ScenarioInfo.Current.CurrentStageNumber == 2" >
						<!-- NOTE: <Improve> : I don't like using CTM at all.  Need a better way of swimming into this cave.
												Also, this shouldn't execute after entering the cave.

												This logic is also used in Warrior-Arms artifact stage 4. -->
						<MoveTo X="2137.83" Y="2395.69" Z="118.3069" />
						<If Condition="Me.Z &gt; 70" >
							<Code File="MyCTM" X="2148.117" Y="2335.397" Z="100.6413" />
							<Code File="MyCTM" X="2145.281" Y="2336.206" Z="84.55514" />
							<Code File="MyCTM" X="2128.243" Y="2341.831" Z="67.68755" />
							<Code File="MyCTM" X="2109.654" Y="2353.573" Z="61.65699" />
							<Code File="MyCTM" X="2090.664" Y="2358.6" Z="65.91748" />
							<Code File="MyCTM" X="2052.529" Y="2343.071" Z="65.91656" />
						</If>
					</If>

					<If Condition="Bots.DungeonBuddy.Helpers.ScenarioInfo.Current.CurrentStageNumber == 3" >
						<Code File="KillUntilComplete" MobIds="101122, 101127" X="2024.902" Y="2337.724" Z="75.20869" TerminateWhen="Bots.DungeonBuddy.Helpers.ScenarioInfo.Current.CurrentStageNumber != 3" />
					</If>

					<If Condition="Bots.DungeonBuddy.Helpers.ScenarioInfo.Current.CurrentStageNumber == 4" >
						<MoveTo X="1988.647" Y="2337.051" Z="75.41167" />
					</If>

					<If Condition="Bots.DungeonBuddy.Helpers.ScenarioInfo.Current.CurrentStageNumber == 5" >
						<Code File="KillUntilComplete" MobId="101875" TerminateWhen="Bots.DungeonBuddy.Helpers.ScenarioInfo.Current.CurrentStageNumber != 5" >
							<HuntingGrounds>
								<Hotspot X="1982.793" Y="2313.623" Z="75.64693" />
								<Hotspot X="1947.189" Y="2311.839" Z="75.41138" />
								<Hotspot X="1941.345" Y="2358.563" Z="75.41144" />
								<Hotspot X="1982.038" Y="2361.41" Z="75.64653" />
							</HuntingGrounds>
						</Code>
					</If>

					<If Condition="Bots.DungeonBuddy.Helpers.ScenarioInfo.Current.CurrentStageNumber == 6" >
						<Code File="KillUntilComplete" MobId="102693" X="1962.075" Y="2336.208" Z="80.27631" TerminateWhen="Bots.DungeonBuddy.Helpers.ScenarioInfo.Current.CurrentStageNumber != 6" />
					</If>

					<If Condition="Bots.DungeonBuddy.Helpers.ScenarioInfo.Current.CurrentStageNumber == 7" >
						<MoveTo X="1873.33" Y="2273.836" Z="37.32634" />
						<Code File="RunCode" Code="await SkipCutscene();" />
					</If>

					<If Condition="Bots.DungeonBuddy.Helpers.ScenarioInfo.Current.CurrentStageNumber == 8" >
						<!-- NOTE: <AddAvoid>?? Two mobs that engage before the boss.  They hit pretty hard and do AoE, may need to avoid this. 
						Name="Faceless Corrupter" Entry="101118" X="1891.957" Y="2191.505" Z="37.35418"
						Name="Faceless Guardian" Entry="102015" X="1857.493" Y="2184.668" Z="37.66719" -->
						<Code File="KillUntilComplete" MobIds="101148, 101118, 102015" X="1875.26" Y="2197.955" Z="37.88557" TerminateWhen="Bots.DungeonBuddy.Helpers.ScenarioInfo.Current.CurrentStageNumber != 8" />
						<!-- NOTE: <AddDoWhen> :  Boss buffs himself with dispellable abilitiy that increases his damage by 20%. -->
					</If>

					<If Condition="Bots.DungeonBuddy.Helpers.ScenarioInfo.Current.CurrentStageNumber == 9" >
						<Code File="WaitTimer" WaitTime="12000" TerminateWhen="Object(247690, o =&gt; o.ToGameObject().CanUse()) != null" />
						<Code File="InteractWith" MobIds="247690" InteractByLooting="true" WaitTime="1500" X="1868.87" Y="2198.75" Z="37.37975" />
						<Code File="Misc\RunLua" Lua="LootButton1:Click();" /> <!-- Extra code in case the IW doesn't loot. -->
						<Code File="WaitTimer" WaitTime="10000" /> <!-- Wait for little cinematic. -->
					</If>

					<If Condition="Bots.DungeonBuddy.Helpers.ScenarioInfo.Current.CurrentStageNumber == 10" >
						<MoveTo X="1877.893" Y="2190.93" Z="36.92414" />
						<Code File="RunCode"><![CDATA[
								var zakajzPoi = Unit(102039); 
								StyxWoW.Me.SetFacing(zakajzPoi.Location);
								await Coroutine.Sleep(550);
								Lua.DoString("ExtraActionButton1:Click();");
							]]>
						</Code>
						<Code File="WaitTimer" WaitTime="11000" />
					</If>
				</If>

				<If Condition="!IsObjectiveComplete(3, 40710) &amp;&amp; HasItem(128827)" >
					<Code File="InteractWith" MobId="247351" QuestId="40710" InteractBlacklistTimeInSeconds="1" X="1883.158" Y="2206.844" Z="38.29892" TerminateWhen="Me.MapId == 1220" />
					<MoveTo X="-702.8652" Y="4489.302" Z="729.4102" />
					<Code File="WaitTimer" WaitTime="5000" QuestId="40710" />
				</If>
			</While>
			<TurnIn QuestName="Blade in Twilight" QuestId="40710" TurnInName="Moira Thaurissan" TurnInId="101310" X="-700.3559" Y="4493.385" Z="728.5856" />
		<!-- END Story: Artifact Weapon - Xal'atath, Blade of the Black Empire -->


		<If Condition="!IsQuestCompleted(40938)" >
			<PickUp QuestName="The Light and the Void" QuestId="40938" GiverName="Prophet Velen" GiverId="101313" X="-695.5399" Y="4492.624" Z="728.5385" />
			<!-- We're picking this quest up even though it's not artifact specific as a method of preventing the Class Hall loader from loading another artifact profile. -->
			<Code File="LoadProfile" ProfileName="../Class Hall Loaders/Priest.xml" />
		</If>

	</QuestOrder>
</HBProfile>

<!-- Notes:

	The Light and the Void is used to determine if we've got the first artifact or not because NPC positions change after this quest.
	Checking if this quest is completed can be used to determine where the NPCs are at for the bot and where we should look for them.
	The Light and the Void is completed directly after completing obtaining your first artifact weapon, so it should be reliable enough to check with.

	Contiuing the Legend is the quest to unlock your second artifact choice.

	One Last Adventure is the quest to unlock your third artifact choice.
-->