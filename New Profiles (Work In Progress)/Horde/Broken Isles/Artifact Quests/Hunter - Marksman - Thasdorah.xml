					<Code File="RunCode" Code="await DalaranHearth();" />
					<MoveTo X="-813.4112" Y="4277.193" Z="746.2777" />
					<Code File="InteractWith" MobId="108868" NonCompeteDistance="0" GossipOptions="1"  X="-809.467" Y="4273.58" Z="746.2848" />
				</If>
